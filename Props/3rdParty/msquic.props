<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="15.0">
  <PropertyGroup>
    <MsQuicBinPath>$(SolutionDir)packages\Microsoft.Native.Quic.MsQuic.OpenSSL.2.5.5\build\native\bin\$(Platform)</MsQuicBinPath>
	<MsQuicIncludePath>$(SolutionDir)packages\Microsoft.Native.Quic.MsQuic.OpenSSL.2.5.5\build\native\include</MsQuicIncludePath>
	<MsQuicLibraryPath>$(SolutionDir)packages\Microsoft.Native.Quic.MsQuic.OpenSSL.2.5.5\build\native\lib\$(Platform)</MsQuicLibraryPath>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>%(AdditionalIncludeDirectories);$(MsQuicIncludePath)</AdditionalIncludeDirectories>
    </ClCompile>
    <Link>
      <AdditionalLibraryDirectories>%(AdditionalLibraryDirectories);$(MsQuicLibraryPath)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
</Project>
